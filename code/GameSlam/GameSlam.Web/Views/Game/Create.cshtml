@using Microsoft.AspNet.Identity

@model GameSlam.Web.Models.UploadGameViewModel
@{
    ViewBag.Title = "GameSlam - Create Game";
}
@*http://dotnet-concept.com/Articles/2014/4/5/Upload-single-or-multiple-files-in-MVC*@

@section scripts
{
    <script type="text/javascript">
        $(function () {
            $('a#submit_link').click(function () {
                $('form#fooForm').submit();
            });
        });
    </script>
}

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Create", "Game", FormMethod.Post, new { id = "fooForm", @class = "wrapper description" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="wrapper description">
            <h3>GENERAL INFORMATION</h3>
            <div>
                @Html.TextBoxFor(m => m.Title, new { @class = "", @placeholder = Html.DisplayNameFor(n => n.Title) })
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            <input type="name" name="game-publisher" placeholder="Publisher" value="@User.Identity.GetUserName()" readonly>
            <div>
            @Html.TextAreaFor(m => m.Description, new { @class = "", @rows = 16, @cols = 40, @placeholder = Html.DisplayNameFor(n => n.Description) })
            @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="wrapper description">
            <h3>SCREENSHOTS</h3>
            <div class="upload"> @Html.TextBoxFor(m => m.ScreenShot1, new { @type = "file"}) @Html.ValidationMessageFor(model => model.ScreenShot1)</div>
            <div class="upload"> @Html.TextBoxFor(m => m.ScreenShot2, new { @type = "file" }) @Html.ValidationMessageFor(model => model.ScreenShot2)</div>
            <div class="upload"> @Html.TextBoxFor(m => m.ScreenShot3, new { @type = "file" }) @Html.ValidationMessageFor(model => model.ScreenShot3)</div>
            <div class="upload"> @Html.TextBoxFor(m => m.ScreenShot4, new { @type = "file" }) @Html.ValidationMessageFor(model => model.ScreenShot4)</div>
            <div class="upload"> @Html.TextBoxFor(m => m.ScreenShot5, new { @type = "file" }) @Html.ValidationMessageFor(model => model.ScreenShot5)</div>
            <div class="upload"> @Html.TextBoxFor(m => m.ScreenShot6, new { @type = "file" }) @Html.ValidationMessageFor(model => model.ScreenShot6)</div>
        </div>

        <div class="wrapper description">
            <h3>DOWNLOADS</h3>

            <div class="upload"> @Html.TextBoxFor(m => m.DownloadWindows, new { @type = "file" }) @Html.ValidationMessageFor(model => model.DownloadWindows)</div>
            <div class="upload"> @Html.TextBoxFor(m => m.DownloadLinux, new { @type = "file" }) @Html.ValidationMessageFor(model => model.DownloadLinux)</div>
            <div class="upload"> @Html.TextBoxFor(m => m.Downloadosx, new { @type = "file" }) @Html.ValidationMessageFor(model => model.Downloadosx)</div>

        </div>

        <section class="wrapper footer">

            @*<div class="">
                <input type="submit" class="" value="Register" />
            </div>*@

            <div class="submit-button"><a id="submit_link" href="#">Submit for Review</a></div>
            <div class="submit-button"><a href="index.html">Cancel</a></div>
        </section>
    }
}